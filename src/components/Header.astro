   <style>
    @import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap');
body {
    margin: 0;
    font-family: 'Quicksand', sans-serif;
    font-weight: bold;
    height: 1500px;
    
}
    *{
  padding: 0;
  margin: 0;
}
header {
  position:relative;
    top: 0px; left: 0;
  z-index: 1000;
}


li{
  list-style: none;
}

a{
  color: white;
  text-decoration: none;
 
}

.right-button button {
    padding: 8px 12px;
   
    color: rgb(0, 0, 0);
    border: none;
    border-radius: 4rem;
    margin-right: 1rem;
    cursor: pointer;
}

.right-button button:hover {
    background-color: #45a049;
}

.container{
  max-width: 100%;
    width: 100%;
    
    margin: 0 auto;
    z-index: 1000;
}

.navbar{
  min-height: 70px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  
}

.nav-menu{
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 30px;
  margin-left: 1rem;
}



.nav-link:hover{
  color: dodgerblue;
}

.hamburger{
  display: none;
  cursor: pointer;
}

.bar{
  display: block;
  width: 25px;
  height: 3px;
  margin: 5px auto;
  -webkit-transition: all 0.3s ease;
  transition: all 0.3s ease;
  background-color: white;
}

.sticky-navbar {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    max-width: auto;
    border-top-right-radius: 2rem;
    border-bottom-right-radius: 2rem;
    background-color: #556146;
    z-index: 1000;
}

.sticky-navbar .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 50px;
}

.sticky-nav-menu {
    display: flex;
    justify-content: center;
    align-items: center;
}

.sticky-nav-item {
    margin: 0 20px;
}

.sticky-nav-link {
    color: white;
    text-decoration: none;
    transition: 0.3s ease-out;
}

.sticky-nav-link:hover {
    color: dodgerblue;
}

.visible {
  display: block !important;
}


@media(max-width:768px){

    .sticky-navbar {
        display: none;
    }
  .hamburger{
    display: block;
    margin-right: 1rem;
  }

  .hamburger.active .bar:nth-child(2){
    opacity: 0;
  }
  .hamburger.active .bar:nth-child(1){
    transform: translateY(8px) rotate(45deg);
  }
  .hamburger.active .bar:nth-child(3){
    transform: translateY(-8px) rotate(-45deg);
  }

  .nav-menu{
    position: fixed;
    left: -120%;
    top: 70px;
    gap: 0;
    margin-left: 0;
    flex-direction: column;
    width: 100%;
    text-align: center;
    transition: 0.8s ease;
    z-index: 1000;
  }

  .nav-item{
    margin: 16px 0;
    
  }


  .nav-menu.active{
    left: 0;
  }
}
   </style>

   <script>
const hamburger = document.querySelector(".hamburger");
const navMenu = document.querySelector(".nav-menu");
const stickyNavbar = document.querySelector(".sticky-navbar");

hamburger.addEventListener("click", () => {
  hamburger.classList.toggle("active");
  navMenu.classList.toggle("active");
});

document.querySelectorAll(".nav-link").forEach(n => n.addEventListener("click", () => {
  hamburger.classList.remove("active");
  navMenu.classList.remove("active");
}));

// Function to toggle the visibility of the sticky navbar based on scroll position
function toggleStickyNavbar() {
  const scrollPosition = window.scrollY;
  const threshold = 500;

  if (window.innerWidth > 768) {
  if (scrollPosition > threshold) {
    stickyNavbar.classList.add("visible");
  } else {
    stickyNavbar.classList.remove("visible");
  }
} else {
  stickyNavbar.classList.remove("visible");
}
}

toggleStickyNavbar();

window.addEventListener("scroll", toggleStickyNavbar);
window.addEventListener("resize", toggleStickyNavbar);

   </script>
