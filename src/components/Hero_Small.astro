---
import Button from "./Button.astro";
const {Image, imageVariant,heroTitle} = Astro.props;
const { showTitle } = Astro.props;
---

<section>
  <div class="container">
    <div class="title">
      {showTitle ? (
         <div class="centered">
      <h1>{heroTitle}</h1>
    </div>
      ) : (
        <>
          <img src="/logo/White_logo.webp" alt="White Logo" />
          <h3>NÃ¸rrebrogade 63, 2200</h3>
          <Button class="button" buttonVariant="5th" buttonText="BESTIL NU" buttonLink="/menu/" />
        </>
      )}
    </div>
    <div class="hero">
      <img data-variant={imageVariant} src={Image} alt="Descriptive text" />
    </div>
  </div>
</section>



<style>


.container {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: auto;
}
.centered {
  display: flex;
  justify-content: center;
  align-items: flex-start; 
  height: 100%; 
  padding-top:clamp(50px,5vw, 100px) ;
}
h3 {
  font-size: clamp(1rem,2vw, 2rem);
  text-wrap: balance;
  color: white;
  margin-bottom: 10%;
}
h1 {
  margin-top: 20%;
  font-size: clamp(2.5rem,3vw,5rem);
  font-weight: 200;
  letter-spacing: 0.5rem;
  color: white;
  text-transform: uppercase;
  text-wrap: balance;
}


.title {
    position: absolute;
    top: 10%;
    left: 50%;
    transform: translateX(-50%);
    z-index: 100;
    text-align: center;
}

.title img {
    max-width: 20vw;
    height: auto;
    max-height: 100%;
}

[data-variant="stor"] {
    width: 100%;
    position: relative;
    top: 0;
    left: 0;
    z-index: 10;
      
      mask-image:url("/svg/maske_v2.svg");
  -webkit-mask-image:url("/svg/maske_v2.svg");
  mask-size: contain;
  mask-repeat: no-repeat;
  mask-position: top 0 left;
  -webkit-mask-size: contain;
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-position: top 0 left;
      
      
}
[data-variant="lille"] {
    width: 100%;
      mask-image:url("/heroImg/maske_small.svg");
  -webkit-mask-image:url("/heroImg/maske_small.svg");
  mask-size: contain;
  mask-repeat: no-repeat;
  mask-position: top 0 left;
  -webkit-mask-size: contain;
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-position: top 0 left;
}
@media(max-width:768px){
  h1 {
    margin-top: 0;
  font-size: clamp(0.5rem,4vw, 3rem);
  font-weight: 400;
  letter-spacing: 0.5rem;
  color: white;
  text-transform: uppercase;
}
.centered {
  display: flex;
  justify-content: center;
  align-items: flex-start; 
  height: 100%; 
  padding-top: 20%;
}
.title {
    position: absolute;
    top: 15%;
    left: 50%;
    transform: translateX(-50%);
    z-index: 100;
    text-align: center;
}

.title img {
    max-width: 20vw;
    height: auto;
    max-height: 100%;
}
}

</style>

