---
import "../css/global.css";
import TilbehorForm from "./tilbehorForm.astro";
const {imgType,imgSrc,imgAlt, sectionVariant, sectionBackground,PakkeTitle,PakkeTekst,ForretTekst,Hovedret1,Hovedret2,Hovedret3,DessertTekst} = Astro.props;
---

<section data-variant={sectionBackground}>
    <div data-variant={sectionVariant}>

        <div class="grid_2-2">

            <div class="grid_item">

        <div class="catering-package">
            <h2>{PakkeTitle}</h2>
            <p class="presentation">{PakkeTekst}</p>
        
            <h3>Forret:</h3>
            <ul>
                <li>{ForretTekst}</li>
            </ul>
        
            <h3>Hovedret:</h3>
            <ul>
                <li>{Hovedret1}</li>
                <li>{Hovedret2}</li>
                <li>{Hovedret3}</li>
            </ul>
        
            <h3>Dessert:</h3>
            <ul>
                <li>{DessertTekst}</li>
            </ul>
            <TilbehorForm/>
        </div>
    </div>
    <div class="grid_item">

        <img loading="lazy" class={imgType} src={`/media/img/${imgSrc}`} alt={imgAlt}>
    </div>
    </div>
    </div>
    
</section>

<style>

    .presentation {
        margin-bottom: 20%;
    }

.catering-package {
            max-width: 400px;
            margin: 0 auto;
        }

        h2 {
            color: #556146;
            font-size: 2vw;
        }
        h3 {
            margin-bottom: 10%;
        }

        ul {
            margin-left: 2rem;
            padding: 0;
            margin-bottom: 10%;
        }

        li {
            margin-bottom: 10%;
            line-height: 1.5;
            font-size: 1.2vw;
            color: #556146;
            font-weight: 400;
        }
        p {
       margin-top: 5%;
       margin-bottom: 5%;
       font-size: 1.2vw;
    
       font-weight: 500;
      
       color: #556146;
   }
   img {
    width: 100%;
    height: auto;
   }

   .grid_2-2 {
    display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    justify-items: center;
   }
</style>