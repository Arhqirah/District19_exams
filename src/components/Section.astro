---
const {sectionHeader, sectionVariant} = Astro.props;
---

<section>
    <h2>{sectionHeader}</h2>
    <div data-variant={sectionVariant}>
        <slot/>
    </div>
</section>

<style>
    section {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 80px auto;
        width: 90%;
        margin: auto;
        justify-items: center;
        align-items: center;
    }
    h2 {
        text-transform: uppercase;
    }
[data-variant] {
    display: grid;
    width: 100%;
    height: 100%;
}
[data-variant="1row1col"] {
    grid-template-rows: repeat(auto-fit, minmax(200px, 1fr));
    justify-items: center;
    background-color: pink;
}
[data-variant="3col"] {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    justify-items: center;
    background-color: pink;
}
[data-variant="2col"] {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    justify-items: center;
}
[data-variant="1col"] {
    grid-template-columns: 1fr;
}
</style>