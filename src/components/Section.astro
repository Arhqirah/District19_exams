---
const {sectionHeader, sectionVariant, sectionBackground} = Astro.props;
---

<section data-variant={sectionBackground}>
    <h2>{sectionHeader}</h2>
    <div data-variant={sectionVariant}>
        <slot/>
    </div>
</section>

<style>

[data-variant="sectionGreen"] {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 80px auto;
       
        margin: auto;
        justify-items: left;
        align-items: left;

}
[data-variant="sectionWhite"] {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 80px auto;
        background-color:white ;
       
        margin: auto;
        justify-items: left;
        align-items: left;

}
    section {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 80px auto;
       
        margin: auto;
        justify-items: left;
        align-items: left;
        
    }
    h2 {
        text-transform: uppercase;
    }
[data-variant] {
    display: grid;
    width: 100%;
    height: 100%;
}
[data-variant="1row1col"] {
    grid-template-rows: repeat(auto-fit, minmax(200px, 1fr));
    justify-items: center;
    background-color: pink;
}
[data-variant="3col"] {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    justify-items: left;
    background-color: pink;
}
[data-variant="2col"] {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    justify-items: center;
    background-color: white;
}
[data-variant="1col"] {
    grid-template-columns: 1fr;
}
</style>