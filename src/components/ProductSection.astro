---
const {sectionText} = Astro.props;
---

<section class="productsSection">
    <h2>{sectionText}</h2>
    <div class="products">
        <slot/>
    </div>
</section>

<style>
.productsSection {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto 1fr;
    margin: auto;
    width: 90%;
}
.products {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    margin: 1rem;
    gap: 2rem;
    align-items: center;
}
h2 {
    text-align: left;
    margin: 1rem;
}
</style>