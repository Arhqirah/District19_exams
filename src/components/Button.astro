---
const {buttonVariant, buttonText} = Astro.props;
---

<button data-variant={buttonVariant}>
    <p>
        {buttonText}
    </p>
</button>

<style>
button {
    display: inline-block;
    box-sizing: content-box;
    height: auto;
    max-height: 2rem;
    max-width: 12rem;
    padding: 0.5rem;
    border-radius: 1.5rem;
    border: 2px solid;
    text-align: center;
}
button:hover {
    /* hvad kunne vi tænke os her? */
    text-decoration: underline 2px;
}
p {
    text-transform: uppercase;
    line-height: 1.25rem;
    text-align: center;
    font-size: 1rem;
    padding: 0.2rem;
    margin: 0.1rem;
}
[data-variant="primary"] {
    color: var(--ff-white1);    
    border-color: var(--ff-white1);
    background-color: var(--ff-green1);
    
}
[data-variant="secondary"] {
    color: var(--ff-green1);
    border-color: var(--ff-white);
    background-color: var(--ff-white);
}
[data-variant="tertiary"] {
    color: var(--ff-green1);
    border-color: var(--ff-green1);
    background-color: rgba(0, 0, 0, 0);

}
[data-variant="4th"] {
    color: var(--ff-white1);
    border-color: var(--ff-white1);
    background-color: var(--ff-green1);
    padding-left: 5%;
    padding-right: 5%;
    
}
[data-variant="5th"] {
    color: var(--ff-green1);
    border-color: var(--ff-white1);
    background-color: var(--ff-white1);
    padding-left: 5%;
    padding-right: 5%;
    
}

@media(max-width:768px){
    p {
    text-transform: uppercase;
    line-height: 0.5rem;
    text-align: center;
    font-size: 12px;
    padding: 0.2rem;
    margin: 0.1rem;
}
button {
    display: inline-block;
    box-sizing: content-box;
    height: auto;
    padding: 0rem;
    border-radius: 1.5rem;
    border: 1px solid;
    text-align: center;
}
button:hover {
    /* hvad kunne vi tænke os her? */
    text-decoration: underline 2px;
}
[data-variant="5th"] {
    display: none;
    color: var(--ff-green1);
    border-color: var(--ff-white1);
    background-color: var(--ff-white1);
    padding-left: 5%;
    padding-right: 5%;
    
}

}
</style>