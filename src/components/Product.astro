---
import Button from "./Button.astro";

const {ret_billede, ret_desc, ret_navn, ret_pris, buttonText, buttonVariant} = Astro.props;
---

<li class="product">
    <img loading="lazy" class="productImg" src=`../${ret_billede}` alt={ret_navn + " med " + ret_desc}>
        <h3>{ret_navn}</h3>
        <p class="textDesc">{ret_desc}</p>
    <div class="buttonField">
        <Button buttonText={buttonText} buttonVariant={buttonVariant}/>
        <h4>{ret_pris},-</h4>
    </div>
</li>

<script></script>

<style>

.product {
    margin-top: 500px;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr balance;
    min-width: 280px;
    max-width: 460px;
    width: 100%;
    gap: 1rem;
    margin: 0.25rem;
}
.productText {
    display: grid;
    width: 100%;
    height: 100%;
    gap: 0.5rem;
}
.productImg {
    object-fit: cover;
    object-position: center;
    height: auto;
    width: 100%;
    min-width: 280px;
    max-width: 500px;
}
.product > div {
    /* margin: 0.25rem; */
}
.textDesc {
    color: #556146;
    font-weight: 400;
}
.buttonField {
    display: grid;
    grid-template-columns: 3fr 1fr;
    justify-content: space-between;
    align-items: center;
    gap: 0.5rem;
    width: 100%;
    height: auto;
}
input {
    width: 60px;
    height: 50px;
}
h3 {
    font-weight: 600;
}

</style>