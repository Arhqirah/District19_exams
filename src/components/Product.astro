---
import Button from "./Button.astro";

const {ret_billede, ret_desc, ret_navn, ret_pris, buttonText, buttonVariant} = Astro.props;
---

<li class="product">
    <img loading="lazy" class="productImg" src=`../${ret_billede}` alt={ret_navn}>
        <h4>{ret_navn}</h4>
        <p class="textDesc">{ret_desc}</p>
    <div class="buttonField">
        <Button buttonText={buttonText} buttonVariant={buttonVariant}/>
        <input type="button">
        <h3>{ret_pris},-</h3>
    </div>
</li>

<script></script>

<style>

.product {
    margin-top: 500px;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr auto;
    min-width: 280px;
    max-width: 460px;
    width: 100%;
    gap: 1rem;
    margin: 0.25rem;
}
.productText {
    display: grid;
    width: 100%;
    height: 100%;
    gap: 0.5rem;
}
.productImg {
    object-fit: cover;
    object-position: center;
    height: auto;
    width: 100%;
    min-width: 280px;
    max-width: 500px;
}
.product > div {
    /* margin: 0.25rem; */
}
.textDesc {
}
.buttonField {
    display: grid;
    grid-template-columns: 3fr 1fr 1fr;
    justify-content: space-evenly;
    align-items: center;
    gap: 0.5rem;
    width: 100%;
    height: auto;
}
h3 {
}
input {
    width: 60px;
    height: 50px;
}

</style>