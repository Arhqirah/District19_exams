---
import "../css/global.css";
const {classType,sectionTitle,sectionText, sectionVariant, sectionBackground} = Astro.props;
---

<section data-variant={sectionBackground}>
    <div data-variant={sectionVariant}
    >
       
        <div >
            <h2 class={classType}>{sectionTitle}</h2>
            <p>{sectionText}</p>
        </div>
        
    </div>
</section>







<style>
    img {
    width: 100%;
    height: auto;
       
      
    }
    .Catering {
        text-transform: uppercase;
        font-size: clamp(2rem,4vw, 4rem);
       font-weight: 600;
       color: #556146;
       white-space: pre-line;
		text-wrap:balance;

    }
    .Husk {
        text-wrap: balance;
        text-transform: uppercase;
        font-size: clamp(2rem,3vw, 3rem);
       font-weight: 800;
       color: #556146;
       white-space: pre-line;
		text-wrap:balance;
        margin-top: 2%;

    }

   p {
    text-wrap: balance;
       margin-top: 3%;
       margin-bottom: 5%;
       font-size: clamp(1rem,2vw, 2rem);
       line-height: 1.6;
       font-weight: 500;
      
       color: #556146;
   }
[data-variant] {
    display: grid;
    margin-left: 10%;
        margin-right: 10%;
        margin-bottom: 5%; 
}

[data-variant="1col"] {
    grid-template-columns: 1fr;
   
}
@media(max-width:768px){ 
    .Catering {
        text-transform: uppercase;
       font-size: 1.5rem;
       font-weight: 600;
       color: #556146;
       white-space: pre-line;
		text-wrap:balance;

    }

    p {
       margin-top: 3%;
       margin-bottom: 5%;
       font-size: 1rem;
       line-height: 1.6;
       font-weight: 500;
      
       color: #556146;
   }
   .Husk {
        text-transform: uppercase;
       font-size: 1.5rem;
       font-weight: 800;
       color: #556146;
       white-space: pre-line;
		text-wrap:balance;
        margin-top: 2%;

    }

}
</style>